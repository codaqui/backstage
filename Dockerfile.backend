# Multi-stage build for Backstage Backend
# Stage 1: Build the backend application
FROM public.ecr.aws/docker/library/node:22-bookworm-slim AS build

# Stage 1.1: Prepare environment
ARG NODE_ENV
ARG NODE_OPTIONS
ARG CONFIG_FILE
ARG ENABLE_K8S=false
ARG BACKEND_PACKAGE=backend
ENV NODE_ENV=${NODE_ENV:-development}
ENV NODE_OPTIONS=${NODE_OPTIONS:-"--no-node-snapshot"}
ENV CONFIG_FILE=${CONFIG_FILE:-"app-config.yaml,app-config.docker.yaml"}

# Set Python interpreter for `node-gyp` to use
ENV PYTHON=/usr/bin/python3

# Install dependencies needed for build
RUN --mount=type=cache,target=/var/cache/apt,sharing=locked \
    --mount=type=cache,target=/var/lib/apt,sharing=locked \
    apt-get update && \
    apt-get install -y --no-install-recommends \
    python3 \
    g++ \
    build-essential \
    libsqlite3-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package.json yarn.lock .yarnrc.yml backstage.json ./
COPY .yarn ./.yarn

# Enable corepack for yarn
RUN corepack enable

# Prepare yarn from the .yarn/releases directory
RUN corepack prepare yarn@4.4.1 --activate

# Copy workspace configuration (ALL workspaces needed for yarn.lock resolution)
ARG BACKEND_PACKAGE
COPY packages/app/package.json ./packages/app/package.json
COPY packages/backend-common/package.json ./packages/backend-common/package.json
COPY packages/backend-catalog/package.json ./packages/backend-catalog/package.json
COPY packages/backend-main/package.json ./packages/backend-main/package.json
COPY packages/backend-techdocs/package.json ./packages/backend-techdocs/package.json

# Install dependencies
RUN --mount=type=cache,target=/home/node/.cache/yarn,sharing=locked \
    yarn install --immutable

# Copy app-config files and default catalog resources
COPY app-config*.yaml ./
COPY default ./default
COPY tsconfig.json ./

# Handle K8s files conditionally based on ENABLE_K8S
RUN if [ "${ENABLE_K8S}" != "true" ]; then \
    echo "K8s mode disabled - removing K8s YAML resources"; \
    rm -f default/k8s/*.yaml || true; \
    else \
    echo "K8s mode enabled - keeping K8s resources"; \
    fi

# Copy app source (required as dependency for backend builds)
COPY packages/app ./packages/app

# Copy backend-common (shared library used by both backends)
COPY packages/backend-common ./packages/backend-common

# Copy the specific backend directory (all files: src, .eslintrc.js, README.md, etc)
ARG BACKEND_PACKAGE
COPY packages/${BACKEND_PACKAGE} ./packages/${BACKEND_PACKAGE}

# Build the backend (based on BACKEND_PACKAGE arg)
RUN yarn workspace ${BACKEND_PACKAGE} build

# Stage 2: Production runtime
FROM public.ecr.aws/docker/library/node:22-bookworm-slim

# Stage 2.1: Prepare environment
ARG NODE_ENV
ARG NODE_OPTIONS
ARG CONFIG_FILE
ARG ENABLE_K8S=false
ARG BACKEND_PACKAGE=backend
ENV NODE_ENV=${NODE_ENV:-production}
ENV NODE_OPTIONS=${NODE_OPTIONS:-"--no-node-snapshot"}
ENV CONFIG_FILE=${CONFIG_FILE:-"app-config.yaml,app-config.docker.yaml"}

# Install base runtime dependencies (curl for healthchecks)
# Note: libsqlite3-dev removed - only needed at build time, not runtime
RUN --mount=type=cache,target=/var/cache/apt,sharing=locked \
    --mount=type=cache,target=/var/lib/apt,sharing=locked \
    apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/*

# Enable corepack as root before switching to node user
RUN corepack enable

# Create cache directory for corepack and set permissions
RUN mkdir -p /home/node/.cache/node/corepack && \
    chown -R node:node /home/node/.cache

# TechDocs Requirements - CONDITIONAL
# Only install Python and mkdocs-techdocs-core for backend-techdocs
# This saves ~200MB for backend-main and backend-catalog images
ARG BACKEND_PACKAGE
RUN if [ "${BACKEND_PACKAGE}" = "backend-techdocs" ]; then \
      echo "ðŸ“š Installing TechDocs dependencies for backend-techdocs..."; \
      apt-get update && \
      apt-get install -y --no-install-recommends \
        python3 \
        python3-pip \
        python3-venv && \
      rm -rf /var/lib/apt/lists/* && \
      python3 -m venv /opt/venv && \
      /opt/venv/bin/pip install --no-cache-dir mkdocs-techdocs-core && \
      echo "âœ… TechDocs dependencies installed"; \
    else \
      echo "â­ï¸  Skipping TechDocs dependencies (not backend-techdocs)"; \
    fi

# Set PATH for venv (harmless if venv doesn't exist)
ENV PATH="/opt/venv/bin:$PATH"

# From here on we use the least-privileged `node` user to run the backend.
USER node

WORKDIR /app

# Copy only essential Yarn files (releases needed for yarn to work)
# Skip cache and other non-essential files
COPY --from=build --chown=node:node /app/.yarn/releases /app/.yarn/releases
COPY --from=build --chown=node:node /app/.yarnrc.yml ./
COPY --from=build --chown=node:node /app/backstage.json ./

# Copy built backend skeleton (package.json structure)
ARG BACKEND_PACKAGE
COPY --from=build --chown=node:node /app/yarn.lock /app/package.json ./
COPY --from=build --chown=node:node /app/packages/${BACKEND_PACKAGE}/dist/skeleton.tar.gz ./
RUN tar xzf skeleton.tar.gz && rm skeleton.tar.gz

# Install ONLY production dependencies for the specific backend
#
# WHY THE CLEANUP? npm packages often ship with unnecessary files:
# - Test suites (test/, __tests__/)
# - Documentation (docs/, *.md)  
# - Examples (example/, examples/)
# - Source maps (*.map)
# This is a known npm ecosystem issue - packages don't strip these on publish.
# The cleanup below reduces image size by ~100-200MB.
#
ARG BACKEND_PACKAGE
RUN --mount=type=cache,target=/home/node/.cache/yarn,sharing=locked,uid=1000,gid=1000 \
    yarn workspaces focus ${BACKEND_PACKAGE} --production && \
    yarn cache clean && \
    # Remove unnecessary directories (single find, OR conditions)
    find node_modules -type d \( \
        -name "test" -o -name "tests" -o -name "__tests__" -o \
        -name "docs" -o -name ".github" -o \
        -name "example" -o -name "examples" \
    \) -exec rm -rf {} + 2>/dev/null || true && \
    # Remove unnecessary files  
    find node_modules -type f \( \
        -name "*.md" -o -name "*.map" -o \
        -name "CHANGELOG*" -o -name "LICENSE*" \
    \) -delete 2>/dev/null || true && \
    # Remove dev packages that slip through --production
    rm -rf node_modules/@types node_modules/@typescript-eslint \
           node_modules/eslint* node_modules/prettier \
           node_modules/jest* node_modules/@jest \
           node_modules/@testing-library 2>/dev/null || true && \
    echo "âœ… Production dependencies installed"

# Copy the built backend bundle
ARG BACKEND_PACKAGE
COPY --from=build --chown=node:node /app/packages/${BACKEND_PACKAGE}/dist/bundle.tar.gz ./
RUN tar xzf bundle.tar.gz && rm bundle.tar.gz

# Copy configuration files (supports comma-separated multiple configs)
ARG CONFIG_FILE
RUN echo "Will load config files: $CONFIG_FILE"
COPY --chown=node:node app-config*.yaml ./

# Copy default resources (all of them from build stage)
COPY --from=build --chown=node:node /app/default ./default

# Updated CMD to support multiple config files (comma-separated)
ARG BACKEND_PACKAGE
ENV BACKEND_PACKAGE=${BACKEND_PACKAGE}
CMD ["bash", "-c", "IFS=',' read -ra CONFIGS <<< \"${CONFIG_FILE}\"; CONFIG_ARGS=''; for config in \"${CONFIGS[@]}\"; do CONFIG_ARGS=\"${CONFIG_ARGS} --config ${config}\"; done; node packages/${BACKEND_PACKAGE} --config app-config.yaml ${CONFIG_ARGS}"]